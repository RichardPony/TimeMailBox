<page>
  <!-- <image src="../../images/write/white.jpg" class="bg-img">
  </image> -->
  <view style="width: 100%;height: 100%;background-image: url(http://www.bistu520.cn:8000/white.jpg);background-size: 100% 100%">
    <view class="head">
      <button bindtap="getImg" class="form_button">
        <image src="/images/icons/image.png" class="nav-icon"></image>
      </button>
      <button bindtap="getRecord" class="form_button">
        <image src="/images/icons/record.png" class="nav-icon"></image>
      </button>
      <button bindtap="post" class="form_button">
        <image src="/images/icons/send.png" class="nav-icon"></image>  
      </button>
    </view>
    <textarea  maxlength="1000" placeholder="在这里撰写您的信件" auto-focus class="textInput" bindinput="getInputValue"></textarea>
    <view class="bottom-img">
      <view wx:for="{{imgArr}}" wx:key="{{index}}">
        <image src="{{item}}" mode='aspectFil'></image>
      </view>
    </view>
  </view>
</page>